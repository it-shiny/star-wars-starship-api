@model StarWarsAPI.Models.Starship

@{
    ViewData["Title"] = "Delete Starship";
}

<div class="container mt-4">
    <h1 class="mb-4">Delete Starship</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Are you sure you want to delete this starship?</h4>
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Starship Details</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        <dt class="col-sm-4">Model</dt>
                        <dd class="col-sm-8">@Model.Model</dd>
                        <dt class="col-sm-4">Manufacturer</dt>
                        <dd class="col-sm-8">@Model.Manufacturer</dd>
                        <dt class="col-sm-4">Cost in Credits</dt>
                        <dd class="col-sm-8">@Model.CostInCredits</dd>
                        <dt class="col-sm-4">Crew</dt>
                        <dd class="col-sm-8">@Model.Crew</dd>
                        <dt class="col-sm-4">Passengers</dt>
                        <dd class="col-sm-8">@Model.Passengers</dd>
                        <dt class="col-sm-4">Starship Class</dt>
                        <dd class="col-sm-8">@Model.StarshipClass</dd>
                    </dl>
                </div>
            </div>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end mt-3">
                    <input type="submit" value="Delete" class="btn btn-danger me-2" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
