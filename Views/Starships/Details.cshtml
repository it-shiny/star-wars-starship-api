@model StarWarsAPI.Models.Starship

@{
    ViewData["Title"] = "Starship Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Starship Details</h1>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Starship Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>
                <dt class="col-sm-4">Model</dt>
                <dd class="col-sm-8">@Model.Model</dd>
                <dt class="col-sm-4">Manufacturer</dt>
                <dd class="col-sm-8">@Model.Manufacturer</dd>
                <dt class="col-sm-4">Cost in Credits</dt>
                <dd class="col-sm-8">@Model.CostInCredits</dd>
                <dt class="col-sm-4">Crew</dt>
                <dd class="col-sm-8">@Model.Crew</dd>
                <dt class="col-sm-4">Passengers</dt>
                <dd class="col-sm-8">@Model.Passengers</dd>
                <dt class="col-sm-4">Starship Class</dt>
                <dd class="col-sm-8">@Model.StarshipClass</dd>
            </dl>
            <div class="d-flex justify-content-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
                <a asp-action="List" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
