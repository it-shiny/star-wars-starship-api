@model IEnumerable<StarWarsAPI.Models.Starship>

@{
    ViewData["Title"] = "Starships";
}

<div class="container mt-4">
    <h1 class="mb-4">Starships</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Model</h6>
                        <p class="card-text">
                            <strong>Manufacturer:</strong> @item.Manufacturer <br />
                            <strong>Cost in Credits:</strong> @item.CostInCredits <br />
                            <strong>Crew:</strong> @item.Crew <br />
                            <strong>Passengers:</strong> @item.Passengers <br />
                            <strong>Starship Class:</strong> @item.StarshipClass
                        </p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
